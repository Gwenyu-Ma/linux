html,body {
  margin: 0;
  padding: 35px;
}
html, body, input, button, select, textarea {
  font-family: "Microsoft YaHei";
}
a:link,a:visited,a:active,a:hover {
  *text-decoration: none;
}

.panel {
  border: solid 1px #d6d9db;
  padding: 15px;
  background-color: #fff;
  -webkit-box-shadow: 2px 2px 5px rgba(0,0,0,.2);
  -moz-box-shadow: 2px 2px 5px rgba(0,0,0,.2);
  box-shadow: 2px 2px 5px rgba(0,0,0,.2);
  filter:progid:DXImageTransform.Microsoft.Shadow(color=#d6d9db,direction=120,strength=5);
  -webkit-border-radius: 5px;
  -moz-border-radius: 5px;
  border-radius: 5px;
}
::-ms-clear {
    display: none;
}

::-ms-reveal {
    display: none;
}

.verify-faild {
  color: red;
}

#imgCode {
  height: 32px;
}
#imgCode:hover {
  cursor: pointer;
}

/*重置密码页面*/
.container.resetpwd {
  width:400px;
}
.container.resetpwd .panel {
  text-align: center;
}
.container.resetpwd input[type=password] {
  width: 300px;
}
.container.resetpwd .btn {
  width: 290px;
  margin-top: 10px;
  padding-top: 6px;
  padding-bottom: 6px;
}
.container.resetpwd label {
  text-align: left;
  padding-left: 40px;
}
.container.resetpwd .panel-code>* {
  float: left;
}
.container.resetpwd .panel-code>label {
  padding-top: 5px;
}
.container.resetpwd .panel-code>input[type=text] {
  width: 120px;
  margin-left: 10px;
  margin-right: 10px;
}

/*新用户注册身份验证页面*/
.container.register {
  width:400px;
}
.container.register .panel {
  text-align: center;
}
.container.register input[type=text] {
  width: 300px;
}
.container.register .btn {
  width: 290px;
  margin-top: 10px;
  padding-top: 6px;
  padding-bottom: 6px;
}
.container.register label {
  text-align: left;
  padding-left: 40px;
}


