<div class="userCenter">
	<ul>
		<li data-current="overview">账户信息</li>
		<li data-current="message">我的消息</li>
		<li data-current="operlog">操作日志</li>
	</ul>
	<div class="uc-content uc-padding">
		<div class="row-fluid overview-content">
		</div>
        <div class="uc-content-left">
        <div class="uc-cl-3">
        <div class="uc-shadow addAccountShadow hide">
        </div>
        <div class="uc-mid-pwd addAccount hide">
            <h3 class="pop">添加账号<a class="close"></a></h3>
            <ul>
                <li>
                    <label>
                        用户名：
                    </label>
                    <input type="password" placeholder="请输入用户名" id="oldPwd"/>
                    <span class="red">*</span>
                    <span class="openPwd">
                        <b></b>锁定：<i>(锁定后无法登录及操作)</i>
                        <input type="text" value="" class="disabled hide" disabled id="centerPass"/>
                    </span>
                    <span class="tip hide">
                        
                    </span>
                </li>
                <li>
                    <label>
                        密码：
                    </label>
                    <input type="password" placeholder="请输入密码" id="newPwd"/>
                    <span class="red">*</span>
                    <span class="tip hide">
                        
                    </span>
                </li>
                <li>
                    <label>
                        昵称：
                    </label>
                    <input type="password" placeholder="请输入昵称" id="confirmPwd"/>
                    <span class="tip hide">
                        
                    </span>
                </li>
                <li class="upload uploadAvt">
                    <div class="uploadlogo">
                        <label>
                            头像：
                        </label>
                        <p class="mask amask">
                            <img src="" alt=""/>
                        </p>
                        <a>更换</a>
                        <span>
                            格式:jpg/png&nbsp;&nbsp;尺寸:72px*72px&nbsp;&nbsp;大小:100k以内
                        </span>
                    </div>
                </li>
                <li>
                    <label>
                        手机号码：
                    </label>
                    <input type="password" placeholder="请输入手机号码密码" id="confirmPwd"/>
                    <span class="tip hide">
                        
                    </span>
                </li>
                <li>
                    <label>
                        邮箱地址：
                    </label>
                    <input type="password" placeholder="请邮箱地址" id="confirmPwd"/>
                    <span class="tip hide">
                
                    </span>
                </li>
                <li class="uc-btn">
                    <span class="red hide">用户名已经存在请尝试其他</span>
                    <a class="uploadBtn">确定</a>
                    <a class="cancelBtn">取消</a>
                </li>
            </ul>   
         </div> 
     </div>
	</div>
</div>
</div>
<div class="c-page-wrap">
    <div class="c-page-container" style="margin-left:0;">
        <div class="c-page-nav">

        </div>        
        <div class="c-page-content accountManage">
                <div class="row-fluid overview-content">
                    <div id="custom-toolbar" class="form-inline client-cmd ">
                      <button id="addAccount" class="btn btn-primary">
						添加账号
                      </button>
                    </div>
                    <table id="tbClient" data-toolbar-align="left" data-toolbar="#custom-toolbar" data-toggle="table" data-resizable="true"></table>
                </div>
        </div>
    </div>
</div>
